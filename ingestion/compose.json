{
  "services": {
    "kafka-standalone": {
      "container_name": "kafka-standalone",
      "hostname": "kafka-standalone",
      "image": "apache/kafka:3.9.0",
      "env_file": [
        "./env/kafka.env"
      ],
      "ports": [
        "9092:9092",
        "9093:9093"
      ]
    },
    "debezium-connect": {
      "container_name": "debezium-connect",
      "hostname": "debezium-connect",
      "image": "quay.io/debezium/connect:3.0.7.Final",
      "env_file": [
        "./env/dbz-connect.env"
      ],
      "ports": [
        "8083:8083"
      ],
      "depends_on": [
        "kafka-standalone"
      ]
    }
  }
}
