{
  "services": {
    "spark-cluster": {
      "container_name": "spark-cluster",
      "hostname": "spark-cluster",
      "image": "spark:python3-java17",
      "env_file": "./env/spark-cluster.env",
      "ports": [
        "18080:18080",
        "8080:8080",
        "7077:7077",
        "6066:6066",
        "4040:4040",
        "15002:15002",
        "8081:8081",
        "7178:7178"
      ],
      "volumes": [
        "./bin/launch-cluster.sh:/opt/spark/bin/launch-cluster.sh",
        "./spark-data:/opt/spark/work-dir/data:rw",
        "./spark-data/logs:/opt/spark/work-dir/data/logs:rw",
        "./spark-data/events:/tmp/spark-events:rw"
      ],
      "command": [
        "sh", "-c", "/opt/spark/bin/launch-cluster.sh"
      ]
    }
  }
}
