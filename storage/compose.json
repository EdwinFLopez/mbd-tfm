{
  "services": {
    "mongodb-atlas": {
      "container_name": "mongodb-atlas",
      "hostname": "mongodb-atlas",
      "image": "mongodb/mongodb-atlas-local:latest",
      "env_file": [
        "./env/mongodb.env"
      ],
      "ports": [
        "27017:27017"
      ],
      "volumes": [
        "./scripts/:/data/scripts/:rw",
        "./mongodb-data/:/data/"
      ],
      "restart": "on-failure",
      "healthcheck": {
        "test": "/usr/bin/mongosh --eval '{ db.adminCommand(\"ping\") }'",
        "interval": "30s",
        "timeout": "10s",
        "retries": 5
      }
    }
  }
}
