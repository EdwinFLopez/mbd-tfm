{
  "services": {
    "mongodb": {
      "container_name": "mongodb",
      "hostname" : "mongo-database",
      "image": "mongo:latest",
      "env_file": [
        "./env/mongodb.env"
      ],
      "ports": [
        "27017:27017"
      ],
      "volumes": [
        "./mongodb/data/:/data/db"
      ],
      "command": "mongod",
      "restart": "always",
      "healthcheck" : {
        "test": "mongo --eval { db.adminCommand('ping') }",
        "interval": "30s",
        "timeout": "10s",
        "retries": 5
      }
    }
  }
}
